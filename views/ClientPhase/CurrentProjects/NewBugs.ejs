<!DOCTYPE html>
<html lang="en">

<head>

<% include ../Partials/ClientStyles %>

</head>

<body>

    <div id="wrapper">

       <% include ../Partials/ClientNavBars %>

        <div id="page-wrapper" style="height:700px !important;">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Current Projects 
                            <small>New Bugs</small>
                        </h1>
                       
                    </div>
                </div>
                <!-- /.row -->
				<div class="row">
					<div class="col-lg-12">
						<button type="button" class="btn btn-primary" id="viewAllBugsBtn" style="float:right;">View All Bugs</button>
					</div>
				</div>
				
				<div class="row">
                    <div class="col-lg-8">
                    	<% var i=-1; bugs.forEach(function(bug) {  i++; if(bug.validated==="") {%> 
						<div class="well well-sm replyAnnounce outerReply">
							<div class="headerReply">
							    <div class="headerNameReply"><%=bug.det_by%></div>
								<div class="headerTimeReply"><%=bug.det_date%></div>
							</div>
							<div class="contentReply">
								<%=bug.bug_desc%>
							</div>
						
						</div>
						<div class="bugsBtns">
						 <button type="button" class="btn btn-xs btn-default" id="viewDeviceBugBtn">View Device</button>
						 <button type="button" class="btn btn-xs btn-default" style="">Reply</button>
						 <form action="/NewBugs" method="get">
						 <input type="hidden" name="sourcepg" value="app_bugspg">
						 <input type="hidden" name="bug_id" value="<%=bug.bugs_id%>">
						 <input type="submit" class="btn btn-xs btn-success" value="Approve">
						 </form>
						 <form action="/NewBugs" method="get">
						 <input type="hidden" name="sourcepg" value="rej_bugspg">
						 <input type="hidden" name="bug_id" value="<%=bug.bugs_id%>">
						 <input type="submit" class="btn btn-xs btn-danger" value="Reject">
						 </form>
						</div>
						<% }}); %>
						
					</div>
				</div>
			</div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
<!-- Device Details PopUp -->
	<div id="deviceDetailsModal" class="modal fade deviceDetailsModal" role="dialog" >
		<div class="modal-dialog">

    <!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header deviceDetailsModalHeader">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Device Detail</h4>
				</div>
			<div class="modal-body" style="overflow-y:auto;">
                	<div class="col-lg-6">

                        <form role="form">
			
                            <div class="form-group">
							    <label class="">Name:</label>
                            </div>
							 <div class="form-group">
                                <label class="">OS:</label>
                             </div>
							 <div class="form-group">
                                <label class="">Version:</label>
                             </div>
							 <div class="form-group">
                                <label class="">Processor SPD:</label>
                             </div>
							<div class="form-group">
                                <label class="">RAM:</label>
                             </div>
							 <div class="form-group">
                                <label class="">Battery:</label>
                             </div>
							 <div class="form-group">
                                <label class="">CON Type:</label>
                             </div>
							 
						</form>
					</div>
					<div class="col-lg-6">

                        <form role="form">
			
                             <div class="form-group">
							    <label class="">Device 1</label>
                            </div>
							 <div class="form-group">
                                <label class="">ios</label>
                             </div>
							 <div class="form-group">
                                <label class="">1.2.3</label>
                             </div>
							 <div class="form-group">
                                <label class="">10</label>
                             </div>
							<div class="form-group">
                                <label class="">2</label>
                             </div>
							 <div class="form-group">
                                <label class="">10</label>
                             </div>
							 <div class="form-group">
                                <label class="">10101010</label>
                             </div>
						</form>
				</div>
			
			</div>
		
    </div>

  </div>
</div>
	<!-- /Device Details PopUp -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>
	 <script src="js/jquery-1.9.1.min.js"></script>
	  <script src="js/jquery-1.11.3.min.js"></script>
	   <script src="js/bootstrap-3.3.5.min.js"></script>
	<script>
	$(document).ready(function(){
	    $("#viewAllBugsBtn").click(function(){
				window.location.href = "/AllBugs";
		});
		$("#viewDeviceBugBtn").click(function(){
			$("#deviceDetailsModal").modal();
		});
		
		
	});
	</script>

</body>

</html>
