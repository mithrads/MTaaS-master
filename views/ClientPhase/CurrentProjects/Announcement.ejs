<!DOCTYPE html>
<html lang="en">

<head>

<% include ../Partials/ClientStyles %>

</head>

<body>

    <div id="wrapper">

       <% include ../Partials/ClientNavBars %>

        <div id="page-wrapper" style="height:700px !important;">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Current Projects 
                            <small>Annoncements</small>
                        </h1>
                       
                    </div>
                </div>
                <!-- /.row -->
				 <div class="row">
				 <form role="form" method="get" action="/Announcement">
                    <div class="col-lg-6">

                        
						  <div class="form-group">
                                <textarea class="form-control" rows="3" name="ann_sub"></textarea>
                            </div>
						<input type="hidden" name="sourcepg" value="ann_pg"></input>
					</div>
					<div class="col-lg-3">
						<input type="submit" class="btn btn-primary" id="announceBtn" value="Announce"></input>
					</div>
					</form>
				</div>
			</div>
			  <% anns.forEach(function(ann) { %>  
			 <div class="row">
                    <div class="col-lg-6">
                        <div class="well outerAnnounce" style="margin-left: 3%;">
						<div class="innerAnnounce">
							<p><%=ann.ann_sub%></p>
							
						<% ann.ann_detail.forEach(function(ann_det) { %>  
						<div class="well well-sm replyAnnounce outerReply">
							<div class="headerReply">
							    <div class="headerNameReply"><%=ann_det.ann_by%></div>
								<div class="headerTimeReply"><%=ann_det.ann_date%></div>
							</div>
							<div class="contentReply">
								<%=ann_det.ann_msg%>
							</div>
						
						</div>
						<% }); %>						  
					</div>
					</div>
					</div>
					<div class="col-lg-3">
					    <button type="button" class="btn btn-primary" id="replyBtn1">Reply</button>
					</div>
				</div>
				<% }); %>
		</div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

	<!-- Reply PopUp -->
	<div id="replyModal" class="modal fade replyModal" role="dialog" >
		<div class="modal-dialog">

    <!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header replyModalHeader">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Annoncement Reply</h4>
				</div>
			<div class="modal-body">
                <form role="form">
					<div class="form-group">
                         <textarea class="form-control" rows="3"></textarea>
                    </div>
				</form>
			</div>
		<div class="modal-footer">
		    <button type="button" class="btn btn-primary" id="replySubmitBtn">Reply</button>
			<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
		</div>
    </div>

  </div>
</div>
	<!-- /Reply PopUp -->
	
	
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>
	<script src="js/jquery-1.9.1.min.js"></script>
	<script src="js/jquery-1.11.3.min.js"></script>
	<script src="js/bootstrap-3.3.5.min.js"></script>
	<script>
	$(document).ready(function(){
		$("#replyBtn1").click(function(){
			
			$("#replyModal").modal();
		});
	});
	</script>

</body>

</html>
