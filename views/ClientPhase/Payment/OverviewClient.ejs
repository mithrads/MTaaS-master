<!DOCTYPE html>
<html lang="en">

<head>

<% include ../Partials/ClientStyles %>

</head>

<body>

    <div id="wrapper">

       <% include ../Partials/ClientNavBars %>

        <div id="page-wrapper" style="height:700px !important;">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Payment
                            <small>Overview Client</small>
                        </h1>
                       
                    </div>
                </div>
                <!-- /.row -->
				<div class="row" >
					<div class="col-lg-3">

                        <form role="form">
			
                            <div class="form-group">
							    <label>Available Credits:</label>
                            </div>
							 <div class="form-group">
                                <label>Locked Credits:</label>
                             </div>
							 <div class="form-group">
                                <label>Spent Credits:</label>
                             </div>
							
											
						</form>
					</div>	
					<div class="col-lg-3">

                        <form role="form">
			
                            <div class="form-group">
							    <label>$<%=avail_cred%></label>
                            </div>
							 <div class="form-group">
                                <label>$<%=lock_cred%></label>
                             </div>
							 <div class="form-group">
                                <label>$<%=spent_cred%></label>
                             </div>
							
							 					
						</form>
					</div>	
				</div>
				
				<div class="row">
				<div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Locked Credits $</th>
                                        <th>Spent Device $</th>
                                        <th>Spent Bugs $</th>
						             </tr>
                                </thead>
                                <tbody>
                                <% projs.forEach(function(proj) { %>  
                                    <tr>
                                        <td><%=proj.proj_id%></td>
                                        <td><%=proj.lock_cred%></td>
                                        <td><%=proj.client[0].spent_dev%></td>
                                        <td><%=proj.client[0].spent_bug%></td>
                                    </tr>
                                <% }); %>
                                   
                                </tbody>
                            </table>
                        </div>
				</div>

				</div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>

	

</body>

</html>
